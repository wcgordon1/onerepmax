---
import Layout from '../../layouts/Layout.astro';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'zh' } },
    { params: { lang: 'es' } },
    { params: { lang: 'fr' } },
    { params: { lang: 'ar' } },
    { params: { lang: 'bn' } },
    { params: { lang: 'pt' } },
    { params: { lang: 'ru' } },
    { params: { lang: 'ur' } },
    { params: { lang: 'hi' } },
    { params: { lang: 'ta' } }
  ];
}

const { lang } = Astro.params;
---

<Layout title="404 - Page Not Found" lang={lang} page="home">
  <div class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4">
    <h1 class="text-7xl font-bold mb-4">404</h1>
    <p class="text-xl text-gray-400 mb-8">Page not found</p>
    
    <a 
      href="/" 
      class="inline-flex items-center justify-center w-14 h-14 bg-primary hover:bg-primary/80 text-white rounded-full transition-all hover:scale-110 shadow-lg"
      aria-label="Go to homepage"
    >
      <svg 
        xmlns="http://www.w3.org/2000/svg" 
        class="h-7 w-7" 
        viewBox="0 0 20 20" 
        fill="currentColor"
      >
        <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
      </svg>
    </a>
  </div>
</Layout> 