---
import Layout from '../../layouts/Layout.astro';
import { Calculator } from '../../components/Calculator';
import { I18nextProvider } from '../../components/I18nextProvider';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'zh' } },
    { params: { lang: 'es' } },
    { params: { lang: 'fr' } },
    { params: { lang: 'ar' } },
    { params: { lang: 'bn' } },
    { params: { lang: 'pt' } },
    { params: { lang: 'ru' } },
    { params: { lang: 'ur' } },
    { params: { lang: 'hi' } },
    { params: { lang: 'ta' } }
  ];
}

const { lang } = Astro.params;
---

<Layout title="Bench Press Calculator" lang={lang} page="bench">
  <div class="max-w-4xl mx-auto">
    <I18nextProvider client:only="react">
      <Calculator client:only="react" exercise="bench" />
    </I18nextProvider>
  </div>
</Layout>